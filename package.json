    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/lodash": "4.17.13",
    "@types/node": "22.8.6",
    "@types/npm-package-arg": "6.1.4",
    "@types/semver": "7.5.8",
