    "@types/js-yaml": "4.0.9",
    "@types/lodash": "4.17.4",
    "@types/node": "20.12.14",
    "@types/npm-package-arg": "6.1.4",
    "@types/semver": "7.5.8",
    "@types/ungap__structured-clone": "1.2.0",
    "@ungap/structured-clone": "1.2.0",
